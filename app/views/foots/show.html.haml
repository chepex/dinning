- model_class = Foot
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @foot.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @foot.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), foots_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_foot_path(@foot), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), foot_path(@foot), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
