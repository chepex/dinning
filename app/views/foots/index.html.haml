- model_class = Foot
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @foots.each do |foot|
      %tr
        %td= link_to foot.id, foot_path(foot)
        %td= foot.name
        %td= foot.description
        %td=l foot.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_foot_path(foot), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), foot_path(foot), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_foot_path, :class => 'btn btn-primary'
